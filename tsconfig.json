{
    "compilerOptions": {
        "target": "ES5",
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,

        // JS Support
        "allowJs": true,

        // Emit
        "sourceMap": true,

        // Interop Constraints
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        // Type Checking
        "strict": false,
        "noImplicitAny": true,
        "skipLibCheck": true
    },

    "include": ["./**/*.ts"],
    "exclude": ["dist", "node_modules", "prod"]
}